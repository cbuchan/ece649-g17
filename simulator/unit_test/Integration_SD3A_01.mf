1.0s  I  AT_FLOOR_PERIOD N AT_FLOOR_[4][FRONT]_CAN_ID AtFloor 4 FRONT = true

;Arc 1c
0.21s  A  F Drive : speed = LEVEL
0.21s  A  F Drive : direction = UP

;Arc 1d
